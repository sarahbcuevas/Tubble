<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.laundryapp.tubble.fragment.CalendarWeekViewFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/scheduler_day_width"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
    android:id="@+id/monday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="16"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />

    <TextView
    android:id="@+id/tuesday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="17"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />

    <TextView
    android:id="@+id/wednesday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="18"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />

    <TextView
    android:id="@+id/thursday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="19"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />

    <TextView
    android:id="@+id/friday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@drawable/calendar_day_selected"
    android:gravity="center"
    android:text="20"
    android:textAllCaps="true"
    android:textColor="@android:color/white" />

    <TextView
    android:id="@+id/saturday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="21"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />

    <TextView
    android:id="@+id/sunday"
    android:layout_width="@dimen/scheduler_day_width"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:text="22"
    android:textAllCaps="true"
    android:textColor="@color/calendar_day" />
    </LinearLayout>
</RelativeLayout>

